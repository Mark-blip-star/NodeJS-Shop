{{#ifeq user.role "admin"}}
<h1>Добавить товары</h1>
{{#if error}}
<p class="alert">{{error}}</p>
{{/if}}
<form action="/add" method="POST">
<div class="input-field">
    <input id="title" name = "title" type="text" class="validate" value="{{data.title}}" required>
    <label for="title">Название товара</label>
    <span class="helper-text" data-error="Введите название" data-success="" ></span>
</div>

<div class="input-field">
    <input id="price" name="price" type="number" class="validate" value="{{data.price}}"required>
    <label for="price">Цена</label>
    <span class="helper-text" data-error="Введите цену" data-success="" min = "1"></span>
</div>

<div class="input-field">
    <input id="img" name="img" type="text" class="validate"required>
    <label for="img">URL</label>
    <span class="helper-text" data-error="Введите URL" data-success=""></span>
</div>
 <input type="hidden" name="_csrf" value="{{csrf}}">
<button class="btn btn-primary">Добавить товар</button>
</form>
{{/ifeq}}
